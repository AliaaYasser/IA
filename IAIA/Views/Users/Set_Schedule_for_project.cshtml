@model IAIA.Models.Project

@{
    ViewBag.Title = "Set_Schedule_for_project";
}
<div class="container body-content">
    <div class="container body-content">
        <div class="col-md-6 graph-2">
            <h3 class="inner-tittle two"> Set time for @Model.ProjectName  </h3>
            <div class="grid-1">
                <div class="form-body">
                    

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <h4>Project</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.ProjectID)

                                @Html.HiddenFor(model => model.ProjectName)

                                @Html.HiddenFor(model => model.ProjectDescription)

                                @Html.HiddenFor(model => model.Projectstatus)

                                <div class="form-group">
                                    @Html.LabelFor(model => model.endData, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBox("StartDate", Model.StartDate, new { @class = "datepicker", @type = "date" })

                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.endData, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBox("endData", Model.endData, new { @class = "datepicker", @type = "date" })
                                    </div>
                                </div>
                                @Html.HiddenFor(model => model.price)
                                <input type="hidden" name="pmid" value="@ViewBag.pmid">
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Save" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>
                        }

                                    </div>

            </div>
        </div>
        </div></div>
